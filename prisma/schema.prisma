generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("NEXT_PUBLIC_DATABASE_URL")
  directUrl = env("NEXT_PUBLIC_DIRECT_URL")
}

model User {
  id                    String                 @id @db.Uuid
  email                 String                 @unique
  passwordHash          String?                @map("password_hash")
  createdAt             DateTime               @default(now()) @map("created_at")
  recurringTransactions RecurringTransaction[]
  transactions          Transaction[]

  @@map("users")
}

model Category {
  id                    Int                    @id @default(autoincrement())
  name                  String                 @unique
  type                  String
  notes                 String?
  createdAt             DateTime               @default(now()) @map("created_at")
  isRecurring           Boolean                @default(false) @map("is_recurring")
  recurringTransactions RecurringTransaction[]
  transactions          Transaction[]

  @@index([name])
  @@map("categories")
}

model Month {
  id                Int           @id @default(autoincrement())
  month             Int
  year              Int
  notes             String?
  createdAt         DateTime      @default(now()) @map("created_at")
  totalExpenses     Decimal       @default(0) @map("total_expenses") @db.Decimal(10, 2)
  totalIncome       Decimal       @default(0) @map("total_income") @db.Decimal(10, 2)
  transactionCount  Int           @default(0) @map("transaction_count")
  recurringExpenses Decimal       @default(0) @map("recurring_expenses") @db.Decimal(10, 2)
  transactions      Transaction[]

  @@unique([month, year])
  @@index([month, year])
  @@map("months")
}

model Transaction {
  id         Int             @id @default(autoincrement())
  userId     String          @map("user_id") @db.Uuid
  monthId    Int             @map("month_id")
  name       String
  amountCAD  Decimal         @map("amount_cad") @db.Decimal(10, 2)
  amountUSD  Decimal?        @map("amount_usd") @db.Decimal(10, 2)
  categoryId Int             @map("category_id")
  notes      String?
  date       DateTime        @db.Date
  createdAt  DateTime        @default(now()) @map("created_at")
  type       TransactionType @default(Expense)
  category   Category        @relation(fields: [categoryId], references: [id])
  month      Month           @relation(fields: [monthId], references: [id])
  user       User            @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([monthId])
  @@index([categoryId])
  @@map("transactions")
}

model RecurringTransaction {
  id         Int             @id @default(autoincrement())
  userId     String          @map("user_id") @db.Uuid
  name       String
  amountCAD  Decimal         @map("amount_cad") @db.Decimal(10, 2)
  amountUSD  Decimal?        @map("amount_usd") @db.Decimal(10, 2)
  categoryId Int             @map("category_id")
  notes      String?
  dayOfMonth Int?            @map("day_of_month")
  createdAt  DateTime        @default(now()) @map("created_at")
  type       TransactionType @default(Expense)
  category   Category        @relation(fields: [categoryId], references: [id])
  user       User            @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([categoryId])
  @@map("recurring_transactions")
}

enum TransactionType {
  Income  @map("Income")
  Expense @map("Expense")

  @@map("transaction_type")
}
